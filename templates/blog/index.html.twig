{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    {% for article in articles %}
    <section class="articles">
        <h2>{{ article.title }}</h2>
        <img src="{{ article.image }}">
        <div class="metadata">ecrit le {{ article.createdAt | date('d/m/y') }} {{ article.createdAt | date('h:i') }} dans la categorie {{ article.category.title }}</div>
        <{{ article.content | raw }}
        <a href="{{ path('blog_show',{'id': article.id}) }}" class="btn btn-primary">lire la suite</a>
    </section>
    {% endfor %}


{% endblock %}
